<div class="container p-2">
    <div class="row" >
    <div class="col-md-6 mx-auto text-center" >
        <div class="card">
            <div class="card-header">
               <h1> Inciar Sesión</h1>
            </div>
            <img src="/img/logo.png" class=" mx-auto d-block m-4 logo" >

            <div class="card-body">
                <form action="/login" method="post">

                <div class="form-group">
                <input type="text" name="username" class="form-control text-center" placeholder="Nombre de usuario" autocomplete="off">
                </div>

                <div class="form-group">
                <input type="password" name="password" class="form-control text-center" placeholder="Contraseña">
                </div>
   
                <div class="form-group mt-5">
                <button type="submit" class="btn btn-success btn-block" >Inciar Sesión</button>
                </div>

                </form>
            </div>
        </div>
    </div>
</div>
</div>