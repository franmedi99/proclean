
<div style="display: contents; width: max-content;">
    
                <div class="row">
                    <div class="col-md-6 mt-5 mx-auto text-center">
                        
                        <div class="card">
                            <div class="card-header">
                                <h1>Editar</h1>
                            </div>
                            <div class="card-body">
                                
                                <form action="/historial/edit/{{receipt._id}}" method="POST">
                                <div class="form-group text-left">
                                <label for="patente">Usuario</label>
                                <input type="text" name="user" class="form-control text-center" placeholder="Usuario" value="{{receipt.user}}" autocomplete="off">
                                </div>
                                <div class="form-group text-left">
                                     <label>Accion</label>
                                    <select class="form-control text-center mx-auto" name="action">
