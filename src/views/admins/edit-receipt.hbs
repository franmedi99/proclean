                                    <option value="COCHERA">Cochera</option>
                                    </select>
                                </div>
                
                                <div class="form-group  text-left">
                                    <label for="patente">Importe</label>
                                <input type="text" name="box" class="form-control text-center" placeholder="Importe" value="{{receipt.box}}">
                                </div>
                
  
                                <div class="form-group text-left">
                                     <label>Tipo</label>
                                    <select class="form-control text-center mx-auto" name="type">
