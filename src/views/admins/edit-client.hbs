
<div>
                <div class="row">
                    <div class="col-md-6 mt-2 mx-auto text-center">
                        <div class="card">
                            <div class="card-header">
                                <h1 class="text-primary">Editar Cliente</h1>
                            </div>
                            <div class="card-body col-10 mx-auto">
                                <form action="/client/edit/{{client._id}}" method="POST">
                                <div class="form-group text-left">
                                <label for="patente">Patente</label>
                                <input type="text" name="patente" class="form-control text-center" placeholder="Patente" value="{{client.patente}}"  onkeyup="javascript:this.value=this.value.toUpperCase();" autocomplete="off">
                                </div>
                                <div class="form-group  text-left">
                                <label for="patente">Marca</label>
                                <input type="text" name="marca" class="form-control text-center" placeholder="Marca" value="{{client.marca}}">
                                </div>
                
                                <div class="form-group  text-left">
                                    <label for="patente">Modelo</label>
                                <input type="text" name="modelo" class="form-control text-center" placeholder="Modelo" value="{{client.modelo}}">
                                </div>
                
                                <div class="form-group  text-left">
                                    <label for="patente">Telefono</label>
                                <input type="tel" name="phone" class="form-control text-center" placeholder="Telefono" value="{{client.phone}}" autocomplete="off">
                                </div>
    
                                <div class="form-group text-left">
                                     <label for="patente">Tipo</label>
                                    <select class="form-control text-center mx-auto" name="tipo">
                                    <option value="Auto">Auto</option>
                                    <option value="Camioneta">Camioneta</option>
                                    </select>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6">
                                    <button type="submit" class="btn btn-success btn-block btn-lg"><i class="fa fa-floppy-o  mr-1" aria-hidden="true"></i>Guardar cambios</button>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="/all-clients" class="btn btn-secondary btn-block btn-lg"><i class="fa fa-times  mr-1" aria-hidden="true"></i>Cancelar</a>
                                    </div>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>